extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='blog title' name='title' required='true' value=(undefined===blog ? '' : blog.title) )
    div.form-group
      label(for='blogger') Blogger:
      select#blogger.form-control(type='select', placeholder='Select blogger' name='blogger' required='true' )
        - bloggers.sort(function(a, b) {let textA = a.family_name.toUpperCase(); let textB = b.family_name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for blogger in bloggers
          if blog
            option(value=blogger._id selected=(blogger._id.toString()===blog.blogger._id.toString() ? 'selected' : false) ) #{blogger.name}
          else
            option(value=blogger._id) #{blogger.name}
    div.form-group
      label(for='content') Content:
      input#content.form-control(type='textarea', placeholder='Content' name='content' value=(undefined===blog ? '' : blog.content))
    
    div.form-group
      label Genre:
      div
        for genre in genres
          div(style='display: inline; padding-right:10px;')
            input.checkbox-input(type='checkbox', name='genre', id=genre._id, value=genre._id, checked=genre.checked )
            label(for=genre._id) #{genre.name}
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
